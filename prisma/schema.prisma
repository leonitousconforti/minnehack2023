datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    UserID          String @id @default(uuid())
    UserName        String @unique
    UserAddress     String
    UserPassword    String
}

model Politician {
    PoliticianID          String @id @default(uuid())
    PoliticianName        String
    PoliticianState       String
    PoliticianOffice      String
    PoliticianIncumbency  Boolean
    PoliticianParty       String
    PoliticianEmail       String
    PoliticianAddress     String
    PoliticianPhoneNumber String
    PoliticianURL         String
}

model Channel {
    ChannelType      String
    ChannelLink      String
    Politician       Politician @relation(fields: [PoliticianID], references: [id])
    PoliticianID     String
    @@id([ChannelType, PoliticianID])
}

model Transcript {
    TranscriptID        String @id @default(uuid())
    TranscriptDate      String
    TranscriptText      String
    User                User @relation(fields: [UserID], references: [id])
    UserID              String
}

model PoliticianTranscript {
    Transcript          Transcript @relation(fields: [TranscriptID], references: [id])
    TranscriptID        String 
    Politician          Politician @relation(fields: [PoliticianID], references: [id])
    PoliticianID        String 
    @@id([TranscriptID, PoliticianID])
}

model Annotation{
    AnnotationID        String @default(uuid())
    Transcript          Transcript @relation(fields: [TranscriptID], references: [id])
    TranscriptID        String 
    StartIndex          Int
    Length              Int
    @@id([AnnotationID, TranscriptID])
}

model Tag{
    TagID               String @id @default(uuid())
    TagName             String
    TagColor            String
    TagIcon             String
}

model AnnotationTag {
    Annotation          Annotation @relation(fields: [AnnotationID], references: [id])
    AnnotationID        String
    Tag                 Tag @relation(fields: [TagID], references: [id])
    TagID               String
    Transcript          Transcript @relation(fields: [TranscriptID], references: [id])
    TranscriptID        String 
    Politician          Politician @relation(fields: [PoliticianID], references: [id])
    PoliticianID        String 
    @@id([AnnotationID, TagID, TranscriptID, PoliticianID])
}

